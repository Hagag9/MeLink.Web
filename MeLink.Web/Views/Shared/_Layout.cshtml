<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MeLink.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MeLink.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">
    <div class="d-flex flex-grow-1">
        @if (User.Identity.IsAuthenticated)
        {
            <aside id="sidebar">
                <button id="sidebar-toggle" class="btn btn-dark mb-3 d-none d-lg-block">
                    <span class="material-symbols-outlined">menu</span>
                </button>
                <nav class="nav flex-column gap-2">
                    <a class="sidebar-link active" href="~/Home/Index" title="Home">
                        <span class="material-symbols-outlined">home</span>
                        <span class="sidebar-text-label">Home</span>
                    </a>
                    @await Component.InvokeAsync("UserType")
                </nav>
                <div class="mt-auto nav flex-column gap-2">
                    <a class="sidebar-link" href="#" title="Profile">
                        <span class="material-symbols-outlined">person</span>
                        <span class="sidebar-text-label">Profile</span>
                    </a>
                    <a class="sidebar-link" href="#" title="More">
                        <span class="material-symbols-outlined">more_horiz</span>
                        <span class="sidebar-text-label">More</span>
                    </a>
                </div>
            </aside>
        }
        <div class="flex-grow-1 d-flex flex-column">
            <header class="shadow-sm">
                <nav class="navbar navbar-expand-lg navbar-light bg-white">
                    <div class="container-fluid">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <button id="sidebar-toggle-mobile" class="btn btn-link d-lg-none me-2">
                                <span class="material-symbols-outlined">menu</span>
                            </button>
                        }
                        <a class="navbar-brand d-flex align-items-center" href="~/Home/Index">
                            <div class="logo-icon text-primary">
                                <svg fill="none" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M36.7273 44C33.9891 44 31.6043 39.8386 30.3636 33.69C29.123 39.8386 26.7382 44 24 44C21.2618 44 18.877 39.8386 17.6364 33.69C16.3957 39.8386 14.0109 44 11.2727 44C7.25611 44 4 35.0457 4 24C4 12.9543 7.25611 4 11.2727 4C14.0109 4 16.3957 8.16144 17.6364 14.31C18.877 8.16144 21.2618 4 24 4C26.7382 4 29.123 8.16144 30.3636 14.31C31.6043 8.16144 33.9891 4 36.7273 4C40.7439 4 44 12.9543 44 24C44 35.0457 40.7439 44 36.7273 44Z" fill="currentColor"></path>
                                </svg>
                            </div>
                            <h1 class="h5 fw-bold ms-2 mb-0 d-none d-sm-block">Pharma</h1>
                        </a>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="main-nav">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item"><a class="nav-link" href="~/Home/Index">Home</a></li>
                                <li class="nav-item"><a class="nav-link" href="#">Contact Us</a></li>
                                <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                            </ul>
                        </div>

                        <form class="d-flex position-relative align-items-center me-lg-3">
                            <span class="material-symbols-outlined position-absolute search-icon">search</span>
                            <input class="form-control form-control-sm rounded-pill search-input" placeholder="Search..." type="text" />
                        </form>

                        <div class="d-flex align-items-center">
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </nav>
            </header>
            <main class="flex-grow-1 bg-light">
                <div class="container-fluid p-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <div class="body-overlay"></div>

    <footer class="footer-enhanced bg-dark text-white pt-5 pb-3">
        <div class="container">
            <div class="row g-4 text-center text-md-start justify-content-lg-between">
                <div class="col-lg-4 col-md-6 mb-4">
                    <a href="#" class="d-inline-block mb-3">
                        <i class="fas fa-pills fa-4x mb-2 text-primary"></i>
                    </a>
                    <p class="small text-muted mb-4">
                        A modern platform connecting patients and medical suppliers, ensuring easy access to essential medicines.
                    </p>
                    <h6 class="text-white fw-bold mb-3">Stay Updated</h6>
                    <form action="#" class="newsletter-form">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Enter your email" required>
                            <button class="btn btn-primary" type="submit">Subscribe</button>
                        </div>
                    </form>
                </div>

                <div class="col-lg-2 col-md-3 col-6 mb-4">
                    <h6 class="text-white fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-muted">Home</a></li>
                        <li class="mb-2"><a href="#" class="text-muted">About Us</a></li>
                        <li class="mb-2"><a href="#" class="text-muted">Contact</a></li>
                        <li class="mb-2"><a href="#" class="text-muted">Privacy Policy</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-3 col-6 mb-4">
                    <h6 class="text-white fw-bold mb-3">Categories</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-muted">Medicines</a></li>
                        <li class="mb-2"><a href="#" class="text-muted">Medical Supplies</a></li>
                        <li class="mb-2"><a href="#" class="text-muted">Cosmetics</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-12 mb-4 text-center text-lg-start">
                    <h6 class="text-white fw-bold mb-3">Contact Info</h6>
                    <ul class="list-unstyled small text-muted">
                        <li class="mb-2"><i class="fas fa-map-marker-alt me-2 text-primary"></i> 123 Health St, Cairo, Egypt</li>
                        <li class="mb-2"><i class="fas fa-envelope me-2 text-primary"></i> info@Logicalsoft.com</li>
                        <li class="mb-2"><i class="fas fa-phone me-2 text-primary"></i> +123 456 7890</li>
                    </ul>
                    <div class="social-icons mt-4">
                        <a href="#" class="text-muted me-3" title="Facebook"><i class="fab fa-facebook-f fa-lg"></i></a>
                        <a href="#" class="text-muted me-3" title="Twitter"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-muted me-3" title="Instagram"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-muted" title="LinkedIn"><i class="fab fa-linkedin-in fa-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer-bottom text-center py-3 mt-4 border-top border-secondary">
            <div class="container">
                <p class="small text-muted mb-0">
                    &copy; @DateTime.Now.Year LogicalSoft All Rights Reserved.
                </p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            const sidebar = $('#sidebar');
            const overlay = $('.body-overlay');

            // Set initial state for desktop
            if (window.innerWidth >= 992) {
                sidebar.addClass('sidebar-collapsed');
            } else {
                sidebar.addClass('sidebar-expanded'); // Ensure it's in a state to be toggled on mobile
            }

            function toggleDesktopSidebar() {
                sidebar.toggleClass('sidebar-collapsed sidebar-expanded');
            }

            function toggleMobileSidebar() {
                // On mobile, expanded means 'visible'
                sidebar.toggleClass('sidebar-expanded');
                overlay.toggle(sidebar.hasClass('sidebar-expanded') && !sidebar.hasClass('sidebar-collapsed'));
            }

            $('#sidebar-toggle').on('click', function () {
                toggleDesktopSidebar();
            });

            $('#sidebar-toggle-mobile').on('click', function (e) {
                e.stopPropagation();
                toggleMobileSidebar();
            });

            overlay.on('click', function () {
                toggleMobileSidebar();
            });

            $(window).on('resize', function() {
                if (window.innerWidth >= 992) {
                    // If we are on desktop, remove expanded state if it was left from mobile
                    sidebar.removeClass('sidebar-expanded');
                    if (!sidebar.hasClass('sidebar-collapsed')) {
                        sidebar.addClass('sidebar-collapsed');
                    }
                    overlay.hide();
                } else {
                    // On mobile, it should be expandable
                     sidebar.removeClass('sidebar-collapsed');
                     if (!sidebar.hasClass('sidebar-expanded')) {
                        sidebar.addClass('sidebar-expanded');
                     }
                }
            });
        });
    </script>
</body>
</html>