@model MeLink.Web.ViewModels.PharmacyActionViewModel

@{
    ViewData["Title"] = "Select Action";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="display-5 text-primary">@Model.SupplierName</h2>
        <p class="lead text-muted">How would you like to proceed?</p>
    </div>

    <div class="row justify-content-center g-4">
        <div class="col-md-5 col-lg-4">
            <a asp-controller="Order" asp-action="Index" asp-route-supplierId="@Model.SupplierId" class="card-link">
                <div class="card bg-success text-white shadow-lg h-100">
                    <div class="card-body text-center d-flex flex-column justify-content-center align-items-center p-4">
                        <i class="fas fa-pills fa-3x mb-3"></i>
                        <h5 class="card-title">Browse Medicines</h5>
                        <p class="card-text">View available medicines and create a detailed order.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-5 col-lg-4">
            <a asp-controller="Order" asp-action="CreatePrescriptionOrder" asp-route-supplierId="@Model.SupplierId" class="card-link">
                <div class="card bg-info text-white shadow-lg h-100">
                    <div class="card-body text-center d-flex flex-column justify-content-center align-items-center p-4">
                        <i class="fas fa-file-prescription fa-3x mb-3"></i>
                        <h5 class="card-title">Order with Prescription Only</h5>
                        <p class="card-text">Upload your prescription and place a quick order.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .card-link {
        text-decoration: none;
        color: inherit;
    }

        .card-link:hover .card {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2) !important;
        }

    .card {
        border-radius: 15px;
        transition: all 0.3s ease-in-out;
    }
</style>
