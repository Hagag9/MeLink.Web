@model MeLink.Web.ViewModels.PharmacySuppliersViewModel

@{
    ViewData["Title"] = "Suppliers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Your Suppliers</h2>
    </div>

    @if (!Model.Suppliers.Any())
    {
        <div class="alert alert-info" role="alert">
            You don't have any suppliers listed at the moment.
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var supplier in Model.Suppliers)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center mb-2">
                    <div>
                        <h5 class="mb-1">@supplier.DisplayName (@supplier.UserType)</h5>
                        <small class="text-muted">@supplier.Address, @supplier.City</small>
                    </div>
                    <a asp-controller="Order" asp-action="BrowseMedicines" asp-route-supplierId="@supplier.UserId" class="btn btn-primary">
                        Browse Medicines
                    </a>
                </div>
            }
        </div>
    }
</div>